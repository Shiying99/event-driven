<application>
<name>vView </name>

<dependencies>
</dependencies>

<module>
    <name> yarpscope </name>
    <parameters> --remote /vpf/scope:o --index "(0 1 2 3)" --color "(red blue green black)" </parameters>
    <node> localhost </node>
</module>


<module>
    <name> vFramer</name>
    <parameters> --frameRate 30 --displays "(0 left (AE ISO) 1 right (AE ISO))" --width 304 --height 240</parameters>
    <node>localhost</node>
</module>

<module>
   <name> yarpview </name>
   <parameters>--name /viewCh0 --x 000 --y 000 --RefreshTime 16 --compact </parameters>
   <node>localhost</node>
</module>

<module>
   <name> yarpview </name>
   <parameters>--name /viewCh1 --x 500 --y 000 --RefreshTime 16 --compact </parameters>
   <node>localhost</node>
</module>

<module>
    <name> vParticleFilter </name>
    <parameters> --name vpf --strict --realtime true --rate 10000 --adaptive --particles 50 --randoms 0.05 --obsthresh 50.0 --obsinlier 1.5 --obsoutlier 3.0 </parameters>
    <node> localhost </node>
</module>

<module>
    <name> vFlow </name>
    <parameters> --strict --filterSize 3 --minEvtsThresh 3 </parameters>
    <node> localhost </node>
</module>

<module>
    <name> vCircle </name>
    <parameters> --strict --qType time --arc 1 --fifo 100 --inlierThreshold 60 --radmin 10 --radmax 20 </parameters>
    <node> localhost </node>
</module>

<module>
    <name> vPepper </name>
    <parameters> --height 304 --width 304 --temporalSize 1000000 </parameters>
    <node> localhost </node>
</module>

<module>
    <name> vRepTest </name>
    <parameters> --vis all </parameters>
    <node> localhost </node>
</module>

<module>
   <name> vCluster </name>
   <parameters> --decay 15000 --tAct 20 --tInact 5 --tFree 5 --maxDist 8 --tEvent 0.5 </parameters>
   <node>localhost</node>
</module>

<module>
    <name> vCircleDisparity </name>
    <parameters> --strict </parameters>
    <node> localhost </node>
</module>

<module>
   <name>vUndistortCam</name>
   <parameters> --sensorHeight 128 --sensorWidth 128 --truncate true </parameters>
   <node>localhost</node>
</module>

<module>
    <name> autoSaccade </name>
    <parameters> --robot icub --checkPeriod 0.5 --minVpS 800 --sVel 1000 --sMag 2</parameters>
    <node>localhost</node>
</module>

<connection>
  <from>/zynqGrabber/vBottle:o</from>
  <to>/vFramer/vBottle:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/zynqGrabber/vBottle:o</from>
  <to>/vpf/vBottle:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/vFlow/vBottle:o</from>
  <to>/vCircle/vBottle:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/vCircle/vBottle:o</from>
  <to>/vCircleDisparity/vBottle:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/vFramer/left</from>
  <to>/viewCh0</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/vpf/debug:o</from>
  <to>/viewCh1</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/temp:o</from>
  <to>/temp:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/temp:o</from>
  <to>/temp:i</to>
  <protocol>tcp</protocol>

</connection>


</application>

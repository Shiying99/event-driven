<application>
    <name> app_vAttention </name>

    <module>
        <name> vAttention </name>
        <parameters> --sensorWidth 304 --sensorHeight 240 --tau 3 --filterSize 15 </parameters>
        <node> localhost </node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /viewLeft --x 000 --y 000 --RefreshTime 16 </parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /activationMap --x 00 --y 000 --RefreshTime 16 </parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /featMap0 --x 00 --y 00 --RefreshTime 16 </parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /featMap45 --x 350 --y 00 --RefreshTime 16 </parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /featMap90 --x 700 --y 00 --RefreshTime 16 </parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /featMap135 --x 1050 --y 00 --RefreshTime 16 </parameters>
        <node>localhost</node>
    </module>


    <module>
        <name>yarpdataplayer</name>
        <node>localhost</node>
    </module>

    <connection>
        <from>/zynqGrabber/vBottle:o</from>
        <to>/vAttention/vBottle:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/vAttention/salMapLeft:o</from>
        <to>/viewLeft</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/vAttention/activationMap:o</from>
        <to>/activationMap</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/vAttention/featMap0:o</from>
        <to>/featMap0</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/vAttention/featMap45:o</from>
        <to>/featMap45</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/vAttention/featMap90:o</from>
        <to>/featMap90</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/vAttention/featMap135:o</from>
        <to>/featMap135</to>
        <protocol>tcp</protocol>
    </connection>

</application>

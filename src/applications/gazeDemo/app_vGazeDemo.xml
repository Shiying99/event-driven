<application>
<name> vPFBallDemo </name>

<module>
    <name> zynqGrabber </name>
    <parameters> --applyFilter false</parameters>
    <node>icub-zynq</node>
</module>

<module>
    <name> vPepper </name>
    <parameters> </parameters>
    <node> icub-blade </node>
</module>

<module>
    <name> vParticleFilter </name>
    <parameters> --threads 10 --variance 1.0 --lParticles 200 --rParticles 200 --obsinlier 1.0 --obsoutlier 6.0 --obsthresh 10.0 --adaptive </parameters>
    <node> icub-blade </node>
</module>

<module>
    <name> yarpscope </name>
    <parameters> --remote /vpf/scope:o --index "(0 1 2 3)" --color "(red blue green black)" </parameters>
    <node> icub24 </node>
</module>

<module>
    <name> vFramer </name>
    <parameters> --name /vFramer --displays "(0 /left (AE CLE ISO) 1 /right (AE CLE ISO))" --height 240 --width 304 --flip </parameters>
    <node>icub24</node>
</module>

<module>
   <name> yarpview </name>
   <parameters>--name /viewLeft --x 30 --y 30 --w 608 --h 480 --synch </parameters>
   <node>icub24</node>
</module>

<module>
   <name> yarpview </name>
   <parameters>--name /viewRight --x 658 --y 30 --w 608 --h 480 --synch </parameters>
   <node>icub24</node>
</module>

<module>
    <name> vGazeDemo </name>
    <parameters> --period 0.01 </parameters>
    <node> icub24 </node>
</module>

<module>
    <name> demoRedBall </name>
        <parameters>  </parameters>
    <node> icub24 </node>
</module>

<connection>
  <from>/zynqGrabber/vBottle:o</from>
  <to>/vPepper/vBottle:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/vPepper/vBottle:o</from>
  <to>/vFramer/AE:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/vPepper/vBottle:o</from>
  <to>/vpf/vBottle:i</to>
  <protocol>shmem</protocol>
</connection>

<connection>
  <from>/vpf/vBottle:o</from>
  <to>/vFramer/GAE:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/vFramer/left</from>
  <to>/viewLeft</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/vFramer/right</from>
  <to>/viewRight</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/vpf/vBottle:o</from>
  <to>/vGazeDemo/vBottle:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/demoRedBall/cmdFace:rpc</from>
  <to>/icub/face/emotions/in</to>
  <protocol>udp</protocol>
</connection>


</application>

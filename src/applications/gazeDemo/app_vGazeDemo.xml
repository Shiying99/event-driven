<application>
<name> vPFBallDemo </name>

<module>
    <name> zynqGrabber </name>
    <parameters> --applyFilter false</parameters>
    <node>icub-zynq</node>
</module>

<module>
    <name> vPepper </name>
    <parameters> </parameters>
    <node>icub23</node>
</module>

<module>
    <name> vParticleFilter </name>
    <parameters> --threads 10 --variance 4.0 </parameters>
    <node> icub23 </node>
</module>

<module>
    <name> yarpscope </name>
    <parameters> --remote /vpf/scope:o --index "(0 1 2 3)" --color "(red blue green black)" </parameters>
    <node> icub24 </node>
</module>

<module>
    <name> vFramer </name>
    <parameters> --name /vFramer --displays "(0 /left (AE CLE ISO) 1 /right (AE CLE ISO))" --height 240 --width 304 --flip </parameters>
    <node>icub24</node>
</module>

<module>
   <name>yarpview</name>
   <parameters> --name /viewLeft --x 100 --y 100 --h 480 --w 608 --RefreshTime 33 </parameters>
   <node> icub24 </node>
</module>

<module>
   <name>yarpview</name>
   <parameters> --name /viewRight --x 100 --y 100 --h 480 --w 608 --RefreshTime 33 </parameters>
   <node> icub24 </node>
</module>

<module>
    <name> vGazeDemo </name>
    <parameters> </parameters>
    <node> icub23 </node>
</module>

<module>
    <name> demoRedBall </name>
        <parameters>  </parameters>
    <node> icub24 </node>
</module>

<connection>
  <from>/zynqGrabber/vBottle:o</from>
  <to>/vPepper/vBottle:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/vPepper/vBottle:o</from>
  <to>/vFramer/AE:i</to>
  <protocol>shmem</protocol>
</connection>

<connection>
  <from>/vPepper/vBottle:o</from>
  <to>/vpf/vBottle:i</to>
  <protocol>shmem</protocol>
</connection>

<connection>
  <from>/vpf/vBottle:o</from>
  <to>/vFramer/GAE:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/vFramer/left</from>
  <to>/viewLeft</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/vFramer/right</from>
  <to>/viewRight</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/vpf/vBottle:o</from>
  <to>/vGazeDemo/vBottle:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/demoRedBall/cmdFace:rpc</from>
  <to>/icub/face/emotions/in</to>
  <protocol>udp</protocol>
</connection>


</application>
